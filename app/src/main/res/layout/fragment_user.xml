<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    tools:context=".Frame.UserFragment">

    <!-- TODO: Update blank fragment layout -->

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


            <TextView
                android:id="@+id/hi_Name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15sp"
                android:text="Chào Bạn"
                android:textSize="30sp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/hi_Name"
                android:layout_marginHorizontal="10sp"
                android:layout_marginTop="30sp" />

            <ImageView
                android:id="@+id/imgAvatar_Profile"
                android:layout_width="190dp"
                android:layout_height="170dp"
                android:layout_below="@+id/hi_Name"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:src="@drawable/boy" />

            <LinearLayout
                android:id="@+id/lin_Khung_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imgAvatar_Profile"
                android:layout_marginHorizontal="10sp"
                android:layout_marginTop="10sp"
                android:orientation="vertical"
                android:padding="6sp">

                <TextView
                    android:id="@+id/txtPTenDangNhap"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:text="Tên đăng nhập: "
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/txtPHoTen"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:text="Họ và tên: "
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/txtPSoDienThoai"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:text="Số điện thoại: "
                    android:textSize="18sp" />


                <TextView
                    android:id="@+id/txtPDiaChi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:text="Địa chỉ: "
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/txtPLoaiTaiKhoan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:text="Loại tài khoản: "
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/btnhoso"
                    android:layout_width="match_parent"
                    android:layout_height="36sp"
                    android:layout_marginVertical="7sp"
                    android:background="@color/orange"
                    android:paddingLeft="10sp"
                    android:textColor="@color/white"
                    android:drawableStart="@drawable/baseline_ho_so"
                    android:text="Chỉnh sửa hồ sơ của bạn" />

            </LinearLayout>


        </RelativeLayout>
    </ScrollView>

</FrameLayout>