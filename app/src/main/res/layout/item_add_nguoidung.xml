<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="25dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Thêm Người Dùng"
        android:textColor="@android:color/black"
        android:textSize="25sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Nhập tên tài khoản:"
        android:textColor="@android:color/black"
        android:textSize="17sp" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/in_ten_tai_khoan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edt_ten_tai_khoan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nhập ở đây...."
            android:padding="10dp" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Nhập họ tên:"
        android:textColor="@android:color/black"
        android:textSize="17sp" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/in_ho_ten"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edt_ho_ten"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nhập ở đây...."
            android:padding="10dp" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Nhập mật khẩu:"
        android:textColor="@android:color/black"
        android:textSize="17sp" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/in_mat_khau"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edt_mat_khau"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nhập ở đây...."
            android:padding="10dp" />
    </com.google.android.material.textfield.TextInputLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Nhập link ảnh người dùng:"
        android:textColor="@android:color/black"
        android:textSize="17sp" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/in_url_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edt_url_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nhập ở đây...."
            android:padding="10dp" />
    </com.google.android.material.textfield.TextInputLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Nhập số điện thoại người dùng:"
        android:textColor="@android:color/black"
        android:textSize="17sp" />
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/in_sdt_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edt_sdt_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nhập ở đây...."
            android:padding="10dp" />
    </com.google.android.material.textfield.TextInputLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Nhập địa chỉ người dùng:"
        android:textColor="@android:color/black"
        android:textSize="17sp" />
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/in_dc_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edt_dc_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nhập ở đây...."
            android:padding="10dp" />
    </com.google.android.material.textfield.TextInputLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="25dp"
        android:padding="5dp">

<!--        <Button-->
<!--            android:id="@+id/btn_huy_ND"-->
<!--            android:layout_width="150dp"-->
<!--            android:layout_height="40dp"-->
<!--            android:layout_marginTop="10dp"-->
<!--            android:layout_marginBottom="10dp"-->
<!--            android:text="Hủy"-->
<!--            android:textAllCaps="false" />-->

<!--        <Button-->
<!--            android:id="@+id/btn_Them_ND"-->
<!--            android:layout_width="150dp"-->
<!--            android:layout_height="40dp"-->
<!--            android:layout_marginTop="10dp"-->
<!--            android:layout_marginBottom="10dp"-->
<!--            android:text="Thêm"-->
<!--            android:textAllCaps="false"-->
<!--            android:textColor="@android:color/black" />-->
        <Button
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:text="ADD"
            android:textStyle="bold"
            android:layout_marginRight="10dp"
            android:backgroundTint="@color/orange"
            android:textColor="@color/white"
            android:textSize="17dp"
            android:id="@+id/btn_Them_ND"/>
        <Button
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:textStyle="bold"
            android:backgroundTint="@color/orange"
            android:textColor="@color/white"
            android:textSize="17dp"
            android:id="@+id/btn_huy_ND"/>
    </LinearLayout>

</LinearLayout>